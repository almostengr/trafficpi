{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Deploy TraffiPi",
            "command": "/bin/bash",
            "type": "shell",
            "args": [
                "-c",
                "\"",
                "dotnet",
                "clean",
                "-c",
                "Release",
                "--project",
                "trafficpi",
                "&&",
                "dotnet",
                "publish",
                "-r",
                "linux-arm",
                "-c",
                "Release",
                "--project",
                "trafficpi",
                "&&",
                // "scp",
                // "-p",
                // "${workspaceRoot}/Almostengr.ThermometerPi.Worker/appsettings.Development.json",
                // "osmc@osmc://usr/lib/thermometerpi/appsettings.json",
                // "&&",
                "scp",
                "-pr",
                "${workspaceRoot}/trafficpi/bin/Release/netcoreapp3.1/linux-arm/*",
                "pi@trafficpi://home/pi/trafficpi",
                "\""
            ],
            "group": "build"
        }
    ]
}